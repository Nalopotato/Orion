function StoreWood()
{
     //Check no mobs before looping
     var mob = Orion.FindType('any', 'any', ground, 'near|mobile|ignorefriends|ignoreself|inlos', '8', 'gray|criminal|orange|red');

     if (mob && mob.length < 2)
     {
         for (var i = 0; i <= woodList.length; i++)
         {
             //while (Orion.FindType(woodList[i], any, backpack))
             //{
                 var amt = 20;
                 if (woodList[i] == '0x0F3F' || woodList[i] == '0x1BFB') //Don't store arrows/bolts unless we have a lot
                     amt = 300

                 if (Player.Weight() > (Player.MaxWeight() * 0.6) && !Orion.Dragging())
                 {
                     StoreItemWithKeys(woodKeys, '0x0A57934D', 60023, woodList[i], amt);
                 }
             //}
         }
     }
}

