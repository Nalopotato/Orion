function StoreBlankRune()
{
	while (Orion.FindType('0x1F14') > '')
	{
		var gump0 = Orion.GetGump('last');
		gump0.Select(Orion.CreateGumpHook(60030));
		Orion.Wait(300);

		if (Orion.WaitForTarget(1000))
			Orion.TargetType('0x1F14');
	}
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////
function GetProperties()
{
	var props = Orion.FindObject('0x423892B0').Properties();
	var result = '';
	
	Orion.Print('PROPS: ' + props + ' ...END PROPS');
	
	for (var i = props.length - 3; i < props.length; i++)
	{
		if (parseInt(props[i]))
			result += props[i];
		Orion.Print(result);
	}
	
	return result;
}

