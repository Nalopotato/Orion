function StoreReagents() 
{
     //Check no mobs before looping
     var mob = Orion.FindType('any', 'any', ground, 'near|mobile|ignorefriends|ignoreself|inlos', '8', 'gray|criminal|orange|red');

     if (mob && mob.length < 2)
     {
         for (var i = 0; i <= regList.length; i++)
         {
             //while (Orion.FindType(regList[i], any, backpack))
             //{
                 //Orion.Print('StoreReagents');
                 if (Player.Weight() > (Player.MaxWeight() * 0.6) && !Orion.Dragging())
                 {
                     StoreItemWithKeys(casterKeys, '0x0EBCD833', 60030, regList[i], 20);
                 }
             //}
         }
     }
}

