var getPlayerNames = function() {
	var mobList = Orion.FindType(any, any, ground, 'human|live|ignoreself', '15', 'blue|green|gray');
	for (var i=0; i < mobList.length; i++) {
		Orion.Print('------------------ ' + i + ' ------------------');
		Orion.Print(89, Orion.FindObject(mobList[i]).Properties() + '\n');
	}
}

